<controls:MyPageControlBase
    x:Class="DynamicDataSamples.Wpf.Views.WelcomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:DynamicDataSamples.Wpf.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel Margin="20">
        <TextBlock
            Margin="0,10"
            FontSize="{StaticResource FontSizeTitle}"
            Text="Study of DynamicData (WPF)" />

        <TextBlock Margin="10" FontSize="{StaticResource FontSizeLarge}">
            <Hyperlink NavigateUri="https://github.com/hsytkm/DynamicDataSamples" RequestNavigate="RequestNavigate">
                https://github.com/hsytkm/DynamicDataSamples
            </Hyperlink>
        </TextBlock>

        <TextBlock
            Margin="20"
            FontSize="{StaticResource FontSizeMiddle}"
            LineHeight="24">
            ・ Using DynamicData<LineBreak />
            ・ Created in the winter of 2022<LineBreak />
            ・ .NET6.0 + C#10<LineBreak />
        </TextBlock>
    </StackPanel>
</controls:MyPageControlBase>
